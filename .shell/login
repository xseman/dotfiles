# Path settings

# Actual user
pathprepend ~/.local/bin PATH
pathprepend ~/.deno/bin PATH
pathprepend ~/go/bin

# Common system
pathprepend /usr/local/bin PATH
pathprepend /usr/local/go/bin PATH
pathprepend /usr/sbin PATH
pathprepend /bin PATH

# The current directory should never be in $PATH
pathremove . PATH
pathremove "" PATH
