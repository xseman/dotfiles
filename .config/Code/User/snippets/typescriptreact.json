{
    "Storybook - Basic skeleton": {
        "prefix": "tsx-story",
        "description": "Storybook - Basic skeleton",
        "body": [
            "import { Meta, Story } from \"@storybook/react/types-6-0\";",
            "import base, { filename } from \"paths.macro\";",
            "import React from \"react\";",
            "",
            "interface Props {",
            "    text: string;",
            "}",
            "",
            "function ${1:ComponentName}(props: Props) {",
            "    return <div>{props.hello}</div>;",
            "}",
            "",
            "export default {",
            "    // title: 'Hello world',                          // custom, you have to mainstain",
            "    // title: \"App\" + base + Hello.name,            // function name, problematic on HoC components",
            "    // title: \"App\" + base + filename.split(\".\"), // filename with filetype",
            "    title: \"App\" + base + filename.split(\".\")[0], // filename without filetype",
            "    component: ${1:ComponentName},",
            "} as Meta;",
            "",
            "const Template: Story<Props> = (args) => <${1:ComponentName} {...args} />;",
            "",
            "export const hello = Template.bind({});",
            "",
            "hello.args = {",
            "    text: \"Hello!\",",
            "};",
            ""
        ]
    },
