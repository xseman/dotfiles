        "prefix": "tsxcc",
        "body": [
            "import React from 'react';",
            "",
            "export interface Props {",
            "",
            "}",
            "",
            "export interface State {",
            "",
            "};",
            "",
            "class ${1:name} extends React.Component<Props, State> {",
            "    constructor(props: Props) {",
            "        super(props);",
            "        this.state = {};",
            "    }",
            "",
            "    componentDidMount() {",
            "      this._init();",
            "    }",
            "",
            "    componentWillUnmount() {",
