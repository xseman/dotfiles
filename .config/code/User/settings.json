{
	"editor.autoClosingBrackets": "languageDefined",
	"editor.autoClosingDelete": "auto",
	"editor.autoClosingQuotes": "languageDefined",
	"editor.bracketPairColorization.enabled": false,
	"editor.codeLens": true,
	"editor.columnSelection": false,
	"editor.cursorBlinking": "solid",
	"editor.cursorStyle": "line",
	"editor.detectIndentation": true,
	"editor.folding": true,
	"editor.foldingHighlight": false,
	"editor.foldingImportsByDefault": false,
	"editor.fontFamily": "JetBrains mono, Cascadia Code",
	"editor.fontLigatures": true,
	"editor.fontSize": 13,
	"editor.formatOnSave": false,
	"editor.glyphMargin": false,
	"editor.insertSpaces": true,
	"editor.largeFileOptimizations": false,
	"editor.lineNumbers": "on",
	"editor.linkedEditing": true,
	"editor.minimap.enabled": false,
	"editor.minimap.renderCharacters": false,
	"editor.renderWhitespace": "selection",
	// "editor.rulers": [80],
	"editor.semanticHighlighting.enabled": true,
	"editor.smoothScrolling": false,
	"editor.snippetSuggestions": "inline",
	"editor.suggest.insertMode": "insert",
	"editor.suggestSelection": "first",
	// "editor.trimAutoWhitespace": false,
	"editor.wordWrap": "off",
	"editor.semanticTokenColorCustomizations": {
	  "enabled": true
	},
	"editor.codeActionsOnSave": {
	  "source.fixAll.eslint": "explicit"
	},

	"websearch.preferredEngine": "bing",
	"websearch.useSearchResultsDirectly": false,

	"chat.editor.fontFamily": "default",
	"chat.editor.fontSize": 13,
	"chat.todoListTool.enabled": true,
	"chat.tools.autoApprove": true,
    "chat.agent.enabled": true,
    "chat.editRequests": "inline",
	"chat.implicitContext.enabled": {
		"panel": "never"
	},
    "chat.instructionsFilesLocations": {
        ".github/instructions": true
    },

	"github.copilot.chat.agent.autoFix": true,
	"github.copilot.chat.agent.runTasks": true,
	"github.copilot.chat.codeGeneration.useInstructionFiles": true,
	"github.copilot.chat.completionContext.typescript.mode": "on",
	"github.copilot.chat.languageContext.fix.typescript.enabled": true,
	"github.copilot.chat.commitMessageGeneration.instructions": [
		{ "text": "Use lowercase for the type and scope in the commit message structure: `<type>[optional scope]: <description>`. Separate the type or scope from the description with a colon and a single space. If including a body, ensure the second line is blank and start the body on the third line." },
		{ "text": "Select an appropriate type from: feat, fix, perf, type, deps, docs, ops, build, ci, qol, chore, config, refactor, revert, security, test, style, examples. Optionally, include a scope (e.g., api, ui, auth) to specify the area affected." },
		{ "text": "Write the description concisely in the imperative mood and present tense (e.g., 'Add feature' not 'Added feature'). Use backticks to highlight code or technical terms." },
		{ "text": "In the body, use bullet points to clearly outline the changes, including any necessary motivation or context." },
		{ "text": "Make clear and simple commit messages to improve readability and tracking." }
	],

	"workbench.colorTheme": "Simple light",
	"workbench.editor.empty.hint": "hidden",
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.limit.enabled": true,
	"workbench.editor.limit.value": 6,
	// "workbench.editor.showTabs": "none",
	"workbench.enableExperiments": false,
	"workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-light",
	"workbench.list.defaultFindMode": "filter",
	"workbench.settings.editor": "json",
	"workbench.settings.enableNaturalLanguageSearch": false,
	"workbench.settings.useSplitJSON": true,
	"workbench.startupEditor": "none",
	"workbench.tree.enableStickyScroll": false,
	"workbench.tree.indent": 15,
	"workbench.tree.renderIndentGuides": "always",

	"window.customMenuBarAltFocus": false,
	"window.enableMenuBarMnemonics": false,
	"window.menuBarVisibility": "hidden",
	"window.newWindowDimensions": "maximized",
	"window.restoreFullscreen": true,
	"window.title": "${rootName}",
	"window.titleBarStyle": "custom",
	"window.zoomPerWindow": false,

	"keyboard.dispatch": "keyCode",

	"breadcrumbs.enabled": true,
	"breadcrumbs.filePath": "on",

	// "search.smartCase": true,

	"explorer.autoReveal": false,
	"explorer.enableDragAndDrop": false,
	"explorer.incrementalNaming": "smart",
	"explorer.sortOrder": "type",
	"explorer.sortOrderLexicographicOptions": "unicode",

	"files.autoSave": "off",
	"files.insertFinalNewline": false,
	"files.refactoring.autoSave": true,
	// "files.trimTrailingWhitespace": true,
	"files.associations": {
		".git*": "ini",
		"*.json": "json",
		"config": "gitconfig",
		"crontab": "shellscript",
		"tsconfig.json": "jsonc",
		"Caddyfile*": "caddyfile",
		".gitlab-ci.yml": "yaml"
	},
	"files.exclude": {
		"**/.git": false,
		"**/.DS_Store": false
	},
	"files.watcherExclude": {
		/** defaults */
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/*/**": true
	},

	"json.schemas": [
        {
            "fileMatch": [
                "manifest.json"
            ],
            "url": "https://json.schemastore.org/chrome-manifest"
        }
    ],

	"yaml.schemas": {
        "https://raw.githubusercontent.com/canonical/cloud-init/main/cloudinit/config/schemas/schema-cloud-config-v1.json": [
            "*cloud-config*",
            "*user-data*",
            "cloud-config.yml",
            "cloud-config.yaml",
            "user-data.yml", 
            "user-data.yaml"
        ],
        "https://raw.githubusercontent.com/canonical/cloud-init/main/cloudinit/config/schemas/schema-network-config-v2.json": [
            "*network-config*",
            "network-config.yml",
            "network-config.yaml"
        ],
        "https://raw.githubusercontent.com/kubernetes/kubernetes/master/api/openapi-spec/swagger.json": [
            "*.k8s.yaml",
            "*.k8s.yml"
        ],
        "https://gitlab.com/gitlab-org/gitlab/-/raw/master/app/assets/javascripts/editor/schema/ci.json": [
            ".gitlab-ci.yml",
            "**/.gitlab-ci.yml"
        ],
		"https://raw.githubusercontent.com/ansible/ansible-lint/main/src/ansiblelint/schemas/inventory.json": [
            "*inventory*",
            "inventory.yml",
            "inventory.yaml"
        ],
        "https://raw.githubusercontent.com/ansible/ansible-lint/main/src/ansiblelint/schemas/ansible.json": [
            "playbook.yml",
            "playbook.yaml",
        ],
    },

	"ansible.ansible.path": "~/.local/bin/ansible",
    "ansible.python.interpreterPath": "/usr/sbin/python3",
    "ansible.validation.enabled": true,
    "ansible.validation.lint.path": "~/.local/bin/ansible-lint",

	/** CTRL+SHIFT+C */
	"terminal.external.linuxExec": "/usr/bin/alacritty",
	"terminal.integrated.copyOnSelection": true,
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.fontFamily": "JetBrains Mono",
	"terminal.integrated.fontSize": 12,
	"terminal.integrated.showExitAlert": false,
	"terminal.integrated.tabs.enabled": false,
	"terminal.integrated.scrollback": 1000000,

	"javascript.format.semicolons": "insert",
	"javascript.preferences.jsxAttributeCompletionStyle": "auto",
	"javascript.preferences.quoteStyle": "double",
	"javascript.suggest.includeAutomaticOptionalChainCompletions": true,

	"typescript.format.semicolons": "insert",
	"typescript.preferences.jsxAttributeCompletionStyle": "auto",
	"typescript.preferences.quoteStyle": "double",
	"typescript.preferences.useAliasesForRenames": false,
	"typescript.suggest.includeAutomaticOptionalChainCompletions": true,
	"typescript.updateImportsOnFileMove.enabled": "always",

	"go.formatTool": "goimports",
	"go.useLanguageServer": true,

	"zenMode.hideLineNumbers": false,

	"prettier.printWidth": 80,
	"prettier.proseWrap": "always",
	"prettier.tabWidth": 4,
	"prettier.useTabs": false,
	"prettier.semi": false,
	"prettier.arrowParens": "always",

	"eslint.codeActionsOnSave.mode": "all",
	"eslint.alwaysShowStatus": true,
	"eslint.run": "onSave",
	"eslint.validate": [
		"css",
		"html",
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],

	"rewrap.autoWrap.enabled": true,
	"rewrap.wrappingColumn": 80,

	"markdown.extension.toc.updateOnSave": false,
	"markdownlint.config": {
		"default": true,
		"spaces": false,
		"MD004": {
			"style": "consistent"
		},
		"MD007": {
			"indent": 1
		},
		"MD010": false,
		"MD013": {
			"line_length": 80,
			"tables": false
		},
		"MD024": false,
		"MD025": false,
		"MD033": false,
		"MD036": false
	},

	"css.lint.emptyRules": "ignore",
	"less.lint.emptyRules": "ignore",
	"scss.lint.emptyRules": "ignore",

	"emmet.showSuggestionsAsSnippets": true,
	"emmet.excludeLanguages": ["markdown", "typescript"],
	"emmet.includeLanguages": {
		"nunjucks": "html",
		"typescript": "typescriptreact",
		"javascript": "javascriptreact"
	},

	"git.confirmSync": true,
	"git.mergeEditor": false,
	"git.openDiffOnClick": true,
	"git.suggestSmartCommit": false,
	"git.untrackedChanges": "separate",

	"gitlens.blame.compact": true,
	"gitlens.blame.format": "${message|5?} ${agoOrDate|10-}",
	"gitlens.codeLens.enabled": false,
	"gitlens.currentLine.enabled": false,
	"gitlens.views.branches.branches.layout": "list",
	"gitlens.views.repositories.files.layout": "tree",

	"diffEditor.experimental.collapseUnchangedRegions": true,
	"diffEditor.ignoreTrimWhitespace": false,
	"diffEditor.maxComputationTime": 0,

	"extensions.autoCheckUpdates": true,
	"extensions.autoUpdate": true,
	"extensions.ignoreRecommendations": true,

	"xml.format.emptyElements": "collapse",
	"xml.format.joinCommentLines": true,
	"xml.format.joinContentLines": true,
	"xml.format.preserveAttributeLineBreaks": true,
	"xml.format.spaceBeforeEmptyCloseTag": true,
	"xml.format.splitAttributes": true,
	"xml.format.xsiSchemaLocationSplit": "onElement",

	"hexeditor.columnWidth": 16,
	"hexeditor.defaultEndianness": "little",
	"hexeditor.inspectorType": "aside",
	"hexeditor.showDecodedText": true,

	"i18n-ally.displayLanguage": "en",
	"i18n-ally.keystyle": "nested",

	"debug.console.fontSize": 11,
	"debug.console.wordWrap": false,

	"[shellscript][bash][perl]": {
		"editor.tabSize": 4,
		"editor.formatOnSave": false
	},
	"[fish]": {
		"editor.defaultFormatter": "bmalehorn.vscode-fish",
		"editor.tabSize": 4
	},
	"[c]": {
		"editor.tabSize": 4
	},
	"[go]": {
		"editor.tabSize": 4,
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"source.fixAll": true,
			"source.organizeImports": true
		}
	},
	"[python]": {
		"editor.tabSize": 4,
		"editor.insertSpaces": true,
		"editor.formatOnSave": true,
		"editor.detectIndentation": false
	},
	"[typescriptreact][javascriptreact][typescript][javascript]": {
		// "editor.formatOnSave": true,
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[css][scss][less]": {
		"editor.defaultFormatter": "denoland.vscode-deno",
		"editor.formatOnSave": true
	},
	"[html][handlebars]": {
		"editor.defaultFormatter": "denoland.vscode-deno",
		"editor.formatOnSave": false,
		"editor.tabSize": 4
	},
	"[markdown][plaintext]": {
		"editor.defaultFormatter": "denoland.vscode-deno",
		"editor.renderWhitespace": "all",
		"editor.formatOnSave": false,
		"files.trimTrailingWhitespace": false
	},
	"[xml]": {
		"editor.defaultFormatter": "redhat.vscode-xml",
		"editor.tabSize": 4
	},
	"[yml][yaml]": {
		"editor.defaultFormatter": "redhat.vscode-yaml",
		"editor.formatOnSave": false,
		"editor.tabSize": 4
	},
	"[dockercompose][dockerfile]": {
		"editor.defaultFormatter": "ms-azuretools.vscode-docker"
	},
	"[tex][latex]": {
		"editor.tabSize": 4,
		"editor.defaultFormatter": "James-Yu.latex-workshop"
	},
	"[json][jsonc]": {
		"editor.defaultFormatter": "denoland.vscode-deno",
		"editor.formatOnSave": false,
		"editor.tabSize": 4
	},
	"[caddyfile]": {
		"editor.insertSpaces": false,
		"editor.formatOnSave": true,
		"editor.tabSize": 4
	},
	"[nginx]": {
		"editor.defaultFormatter": "raynigon.nginx-formatter",
		"editor.tabSize": 4
	},

	"latex-workshop.latex.autoBuild.run": "never",
	"mdb.sendTelemetry": false,
	"problems.autoReveal": false,
	"redhat.telemetry.enabled": false,
	"svg.preview.mode": "svg",
	"telemetry.telemetryLevel": "off"
}
